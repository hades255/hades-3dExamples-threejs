.fans_page
  height 100vh
  width 100vw
  overflow hidden
  background url('./images/bg.png') no-repeat center
  background-size cover
  .github
    position fixed
    left 0
    bottom 0
    z-index 11
    padding 16px
    text-decoration none
    transition opacity .25s ease-in-out
    .author
      color #2C57EA
      text-shadow 0 1px 2px rgba(0, 0, 0, .1)
      position relative
      left 4px
      top -10px
      font-size 16px
    &:hover
      opacity .6