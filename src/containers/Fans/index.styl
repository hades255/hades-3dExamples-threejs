.fans_page
  height 100vh
  width 100vw
  overflow hidden
  background url('./images/bg.png') no-repeat center
  background-size cover
  .logo
    display inline-block
    height 80px
    width 80px
    background url('./images/logo.awebp') no-repeat center
    background-size 100% 100%
    position fixed
    top 24px
    left 24px
    filter drop-shadow(0 1px 1px rgba(200, 200, 200, .2))
    &.click
      background url('./images/click.png') no-repeat center
      background-size 100% 100%
      top unset
      left unset
      right 24px
      bottom 24px
  .github
    position fixed
    left 0
    bottom 0
    z-index 11
    padding 24px
    text-decoration none
    transition opacity .25s ease-in-out
    .author
      color #2C57EA
      text-shadow 0 1px 2px rgba(0, 0, 0, .1)
      position relative
      left 4px
      top -10px
      font-size 16px
    &:hover
      opacity .6